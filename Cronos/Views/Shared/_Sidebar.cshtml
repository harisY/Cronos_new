@using Cronos.Helpers
@using Cronos.Models
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Content/adminlte/img/avatar5.png" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@User.Identity.GetUserNameIdentifier()</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
            <li class="@Html.IsSelected(controller: "Dashboard")">
                <a href="@Url.Action("Dashboardv1", "Dashboard")">
                    <i class="fa fa-folder-o"></i> <span> Dashboard</span>
                </a>
            </li>
            <! ============================= USER ===================== -->
            @if (User.IsInRole("Administrator"))
            {
                <li class="treeview @Html.IsSelected(controller: "User")">
                    <a href="@Url.Action("Index", "User")">
                        <i class="fa fa-folder-o"></i>
                        <span> User Management</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="@Html.IsSelected(action: "Index")"><a href="@Url.Action("Index", "User")"><i class="fa fa-circle-o"></i> User</a></li>
                        <li class="@Html.IsSelected(action: "ViewAllRoles")"><a href="@Url.Action("ViewAllRoles", "User")"><i class="fa fa-circle-o"></i> Role</a></li>
                    </ul>
                </li>
                <li class="@Html.IsSelected(controller: "Dept")">
                    <a href="@Url.Action("Index", "Dept")">
                        <i class="fa fa-folder-o"></i> <span> Department</span>
                    </a>
                </li>
                
                <li class="treeview @Html.IsSelected(controller: "Reports")">
                    <a href="@Url.Action("IndexCustomFA", "Reports")">
                        <i class="fa fa-bar-chart-o"></i>
                        <span> Report</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="@Html.IsSelected(action: "IndexCustomFA")"><a href="@Url.Action("IndexCustomFA", "Reports")"><i class="fa fa-circle-o"></i> Mutasi Mesin & Alat Kantor</a></li>
                        <li class="@Html.IsSelected(action: "IndexCustomIncoming")"><a href="@Url.Action("IndexCustomIncoming", "Reports")"><i class="fa fa-circle-o"></i> Pemasukan Barang</a></li>
                        <li class="@Html.IsSelected(action: "IndexCustomOutgoing")"><a href="@Url.Action("IndexCustomOutgoing", "Reports")"><i class="fa fa-circle-o"></i> Pengeluaran Barang</a></li>
                        <li class="@Html.IsSelected(action: "IndexRawMaterial")"><a href="@Url.Action("IndexRawMaterial", "Reports")"><i class="fa fa-circle-o"></i> Mutasi Bahan Baku</a></li>
                        <li class="@Html.IsSelected(action: "IndexWIP")"><a href="@Url.Action("IndexWIP", "Reports")"><i class="fa fa-circle-o"></i> Posisi Barang Dalam Proses</a></li>
                        <li class="@Html.IsSelected(action: "IndexScrap")"><a href="@Url.Action("IndexScrap", "Reports")"><i class="fa fa-circle-o"></i> Mutasi Barang Sisa & Scrap</a></li>
                        <li class="@Html.IsSelected(action: "IndexFG")"><a href="@Url.Action("IndexFG", "Reports")"><i class="fa fa-circle-o"></i> Mutasi Barang Jadi</a></li>
                    </ul>
                </li>
            }
            else
            {
                
                <li class="treeview @Html.IsSelected(controller: "Reports")">
                    <a href="@Url.Action("IndexCustomFA", "Reports")">
                        <i class="fa fa-bar-chart-o"></i>
                        <span> Report</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="@Html.IsSelected(action: "IndexCustomFA")"><a href="@Url.Action("IndexCustomFA", "Reports")"><i class="fa fa-circle-o"></i> Mutasi Mesin & Alat Kantor</a></li>
                        <li class="@Html.IsSelected(action: "IndexCustomIncoming")"><a href="@Url.Action("IndexCustomIncoming", "Reports")"><i class="fa fa-circle-o"></i> Pemasukan Barang</a></li>
                        <li class="@Html.IsSelected(action: "IndexCustomOutgoing")"><a href="@Url.Action("IndexCustomOutgoing", "Reports")"><i class="fa fa-circle-o"></i> Pengeluaran Barang</a></li>
                        <li class="@Html.IsSelected(action: "IndexRawMaterial")"><a href="@Url.Action("IndexRawMaterial", "Reports")"><i class="fa fa-circle-o"></i> Mutasi Bahan Baku</a></li>
                        <li class="@Html.IsSelected(action: "IndexWIP")"><a href="@Url.Action("IndexWIP", "Reports")"><i class="fa fa-circle-o"></i> Posisi Barang Dalam Proses</a></li>
                        <li class="@Html.IsSelected(action: "IndexScrap")"><a href="@Url.Action("IndexScrap", "Reports")"><i class="fa fa-circle-o"></i> Mutasi Barang Sisa & Scrap</a></li>
                        <li class="@Html.IsSelected(action: "IndexFG")"><a href="@Url.Action("IndexFG", "Reports")"><i class="fa fa-circle-o"></i> Mutasi Barang Jadi</a></li>
                    </ul>
                </li>
            }
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
